# Stage 1: Build
FROM node:22-alpine AS builder

WORKDIR /app

COPY package*.json ./
COPY app.config.js ./
COPY ./ ./

RUN npm install
RUN npm run build

# Stage 2: Run
FROM node:22-alpine

WORKDIR /app

ARG WEATHER_API_KEY
ENV WEATHER_API_KEY=${WEATHER_API_KEY}

ARG DB_HOST
ENV DB_HOST=${DB_HOST}

ARG DB_PORT
ENV DB_PORT=${DB_PORT}

ARG DB_USER
ENV DB_USER=${DB_USER}

ARG DB_PASSWORD
ENV DB_PASSWORD=${DB_PASSWORD}

ARG DB_MAIN_NAME
ENV DB_MAIN_NAME=${DB_MAIN_NAME}

ARG DB_AUTH_NAME
ENV DB_AUTH_NAME=${DB_AUTH_NAME}

ARG CLIENT_ID
ENV CLIENT_ID=${CLIENT_ID}

ARG CLIENT_SECRET
ENV CLIENT_SECRET=${CLIENT_SECRET}

ARG SESSION_SECRET
ENV SESSION_SECRET=${SESSION_SECRET}

ARG REDIRECT_URI
ENV REDIRECT_URI=${REDIRECT_URI}

ARG JWT_SECRET
ENV JWT_SECRET=${JWT_SECRET}

ARG TOKEN
ENV TOKEN=${TOKEN}

ARG ORG
ENV ORG=${ORG}

ARG BUCKET
ENV BUCKET=${BUCKET}

ARG URL
ENV URL=${URL}

COPY --from=builder /app /app

ENV NODE_ENV=production
ENV PORT=3000

EXPOSE 3000

CMD ["npm", "start"]